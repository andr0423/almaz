{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build file",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-v",
                "-pthread",
                "-lpthread",
                "-std=c++11",
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${fileBasename}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Me."
        },

        {
            "label": "Start binary",
			"type": "shell",
			"command": "./${fileBasenameNoExtension}",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "none",
				"isDefault": false
			},
			"detail": "Task start binary",
			"problemMatcher": []
		},

        {
            "label": "Clean binary",
			"type": "shell",
			"command": "/bin/rm",
			"args": [
				"-r",
				"-f",
				"${fileBasenameNoExtension}",
                "${fileBasenameNoExtension}.dSYM",
                "./__pycache__"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "none",
				"isDefault": false
			},
			"detail": "Task clean bin and debug files",
			"problemMatcher": []
		}
    ]
}